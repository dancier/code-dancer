#cloud-config
package_update: true
package_upgrade: true
packages:
  - python3-pip
runcmd:
  - mkdir /mnt/test-dancelake
  - mount -o discard,defaults /dev/disk/by-id/scsi-0HC_Volume_24790706 /mnt/test-dancelake
  - echo "/dev/disk/by-id/scsi-0HC_Volume_24790706 /mnt/test-dancelake ext4 discard,nofail,defaults 0 0" >> /etc/fstab
  - curl -fsSL https://get.docker.com -o get-docker.sh
  - sh get-docker.sh
  - pip3 install docker-compose
  - ln -s /mnt/test-dancelake /run-env
  - echo "source /run-env/settings.sh" >> /root/.bashrc

power_state:
  mode: reboot